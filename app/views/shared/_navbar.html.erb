<div class="navbar fixed-top navbar-expand-sm navbar-light navbar-senior">
  <div class="navbar-brand">
    <%= link_to root_path do %>
      <%= cl_image_tag "logo.png" %>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="#">My bookings</a>
      </li>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
        <%= cl_image_tag current_user.photo.key , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My profile", "#", class: "dropdown-item" %>
          <%= link_to "Disconnect", destroy_user_session_path, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
